#include <stdio.h>
#include <stdlib.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <unistd.h>
int main()
{
    int shmid, i;
    pid_t pid;
    char *shmptr;

    /* Create shared memory */
    shmid = shmget(2041, 32, 0666 | IPC_CREAT);
    if (shmid == -1) {
        perror("shmget failed");
        exit(1);
    }

    /* Attach shared memory */
    shmptr = (char *)shmat(shmid, NULL, 0);
    if (shmptr == (char *)-1) {
perror("shmat failed");
        exit(1);
    }

    pid = fork();

    if (pid > 0)   // Parent Process
    {
        printf("\nPARENT PROCESS WRITING:\n");
        for (i = 0; i < 10; i++) {
            shmptr[i] = 'A' + i;
            printf("%c", shmptr[i]);
        }
        printf("\n");

        wait(NULL);   // wait for child

        shmdt(shmptr);  // detach
    }
    else if (pid == 0)   // Child Process
    {
        sleep(1);   // ensure parent writes first

        printf("\nCHILD PROCESS READING:\n");
        for (i = 0; i < 10; i++) {
            printf("%c", shmptr[i]);
        }
        printf("\n");

        shmdt(shmptr);              // detach
        shmctl(shmid, IPC_RMID, NULL);  // delete shared memory
    }
    else
    {
        perror("fork failed");
        exit(1);
    }

    return 0;
}

